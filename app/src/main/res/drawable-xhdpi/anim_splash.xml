    <!-- Animating the Scale and Fade of the Entire Group -->
    <target android:name="logo_group">
        <aapt:attr name="android:animation">
            <set android:ordering="together">

                <!-- PHASE 1: Quick Fade In (0-200ms) -->
                <objectAnimator
                    android:propertyName="alpha"
                    android:duration="400"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/decelerate_interpolator" />

                <!-- PHASE 1: Scale Up with Overshoot "Pop" (0-450ms) -->
                <!-- Overshoot naturally makes it burst past 1.0 and settle perfectly, creating a beautiful bounce -->
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="850"
                    android:valueFrom="0.6"
                    android:valueTo="1.0"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/overshoot_interpolator" />
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="850"
                    android:valueFrom="0.6"
                    android:valueTo="1.0"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/overshoot_interpolator" />
            </set>
        </aapt:attr>
